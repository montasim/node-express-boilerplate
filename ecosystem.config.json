{
    "apps": [
        {
            "name": "SurveyModuleBackend-dev",
            "script": "./src/server.js",
            "watch": true,
            "env": {
                "NODE_ENV": "development",
                "PORT": 5000
            },
            "ignore_watch": ["node_modules", "tests"],
            "instances": 1,
            "exec_mode": "fork",
            "error_file": "./logs/dev-err.log",
            "out_file": "./logs/dev-out.log",
            "merge_logs": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss"
        },
        {
            "name": "SurveyModuleBackend-prod",
            "script": "./src/server.js",
            "env": {
                "NODE_ENV": "production",
                "PORT": 8080
            },
            "instances": "max",
            "exec_mode": "cluster",
            "error_file": "./logs/prod-err.log",
            "out_file": "./logs/prod-out.log",
            "merge_logs": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "autorestart": true,
            "watch": false,
            "time": true
        }
    ]
}
