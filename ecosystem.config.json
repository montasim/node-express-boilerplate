{
    "apps": [
        {
            "name": "SurveyModuleBackend-prod",
            "script": "./src/server.js",
            "env": {
                "NODE_ENV": "production",
                "PORT": "8080"
            },
            "instances": 5,
            "exec_mode": "cluster",
            "error_file": "./temp/logs/prod-err.log",
            "out_file": "./temp/logs/prod-out.log",
            "merge_logs": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "autorestart": true,
            "watch": false,
            "time": true
        }
    ]
}
